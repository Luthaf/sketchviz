{
  "name": "chemiscope",
  "version": "0.3.0-beta.1",
  "description": "An interactive structure/property explorer for materials and molecules",
  "author": "Guillaume Fraux <guillaume.fraux@epfl.ch>",
  "license": "BSD-3-Clause",
  "main": "dist/chemiscope.min.js",
  "types": "dist/chemiscope.d.ts",
  "engines": {
    "npm": ">=6"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cosmo-epfl/chemiscope.git"
  },
  "scripts": {
    "test": "npm run test:mocha && npm run test:lint",
    "test:mocha": "webpack --config=tests/webpack.config.ts && mocha dist/tests/**/*.test.js",
    "test:lint": "eslint src && prettier --check src",
    "build": "webpack --mode production",
    "download-example-input": "ts-node ./utils/download-example-input.ts",
    "api-docs": "typedoc",
    "start": "npm run download-example-input && webpack serve --mode development --content-base ./app",
    "chemiscope-dts": "dts-bundle-generator -o dist/chemiscope.d.ts dist/src/index.d.ts",
    "jsmol-widget-dts": "dts-bundle-generator -o dist/jsmol-widget.d.ts dist/src/structure/widget.d.ts",
    "merge-dts": "npm run chemiscope-dts && npm run jsmol-widget-dts",
    "prepublishOnly": "rm -rf dist && npm run build && npm run merge-dts",
    "pretty": "prettier --write src"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/markdown-it": "^12",
    "@types/mocha": "^8.0.3",
    "@types/node": "^15",
    "@types/plotly.js": "^1.50.15",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "assert": "^2.0.0",
    "buffer": "^6.0.2",
    "canvas": "^2.6.1",
    "chai": "^4.2.0",
    "css-loader": "^5.0.0",
    "dts-bundle-generator": "^5.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^8.3",
    "eslint-plugin-prettier": "^3.1.4",
    "html-loader": "^2.1",
    "ify-loader": "^1.1.0",
    "jsdom": "^16.4.0",
    "markdown-it": "^12.0.2",
    "mocha": "^8.1.2",
    "node-loader": "^2.0",
    "plotly.js": "1.54",
    "prettier": "2.3.0",
    "process": "^0.11.10",
    "style-loader": "^2.0.0",
    "tmp": "^0.2.1",
    "ts-loader": "^9.1",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19",
    "typedoc-plugin-external-module-name": "^4",
    "typescript": "^4.0.3",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  }
}
